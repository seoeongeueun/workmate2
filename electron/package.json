{
	"name": "workmate",
	"version": "1.0.0",
	"description": "A retro music player for true old-school lovers ðŸ“»",
	"author": "seongeueun",
	"license": "MIT",
	"type": "module",
	"main": "dist/electron/main.mjs",
	"scripts": {
		"tsc": "tsc --project tsconfig.electron.json && node ./lib/encrypt-env.js && cp ./preload.cjs dist/electron/preload.cjs",
		"dev": "NODE_ENV=development npx electron .",
		"build": "NODE_ENV=production npm run tsc && electron-builder --mac"
	},
	"build": {
		"appId": "app.vercel.workmatebeta",
		"productName": "Workmate",
		"asar": true,
		"files": [
			"dist/electron/**/*",
			"dist/app/**/*",
			"package.json",
			"icons/**/*",
			{
				"from": "../out",
				"to": "dist/out"
			}
		],
		"extraResources": [
			{
				"from": "env.enc.json",
				"to": "."
			}
		],
		"icon": "./icons/icon512x512.png"
	},
	"dependencies": {
		"bcrypt": "^5.1.1",
		"crypto": "^1.0.1",
		"dotenv": "^16.4.7",
		"electron-conf": "^1.2.1",
		"express": "^4.21.2",
		"get-port": "^7.1.0",
		"mongoose": "^8.11.0",
		"typescript": "^5.7.3"
	},
	"devDependencies": {
		"@types/express": "^5.0.0",
		"electron": "^34.2.0",
		"electron-builder": "^25.1.8"
	}
}
