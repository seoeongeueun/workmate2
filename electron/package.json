{
	"name": "workmate",
	"version": "1.0.0",
	"description": "A retro music player for true old-school lovers ðŸ“»",
	"author": "seongeueun",
	"license": "MIT",
	"type": "module",
	"main": "dist/electron/main.mjs",
	"scripts": {
		"tsc": "tsc --project tsconfig.electron.json",
		"dev": "npx electron .",
		"build": "npm run tsc && electron-builder"
	},
	"build": {
		"appId": "app.vercel.workmatebeta",
		"productName": "Workmate",
		"asar": true,
		"directories": {
			"output": "release",
			"app": "."
		},
		"asarUnpack": [
			"node_modules/electron-conf/**",
			"./dist/electron/main.mjs"
		],
		"files": [
			"package.json",
			"icons/**/*",
			"dist/electron/**/*",
			"dist/app/**/*"
		],
		"extraResources": [
			{
				"from": "dist/electron",
				"to": "."
			},
			{
				"from": "dist/app",
				"to": "app"
			}
		],
		"icon": "./icons/icon512x512.png"
	},
	"dependencies": {
		"crypto": "^1.0.1",
		"electron-conf": "^1.2.1",
		"typescript": "^5.7.3"
	},
	"devDependencies": {
		"electron": "^34.2.0",
		"electron-builder": "^25.1.8"
	}
}
