{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"verbatimModuleSyntax": true,
		"outDir": "./dist",
		"rootDir": "../",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["../electron/**/*"],
	"exclude": ["node_modules", "../dist", "../release"]
}
