{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"outDir": "dist",
		"rootDir": "./",
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["app/**/*.ts", "app/**/*.tsx", "electron/**/*.ts", "electron/**/*.js", "electron/**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "dist", "tailwind.config.cjs", "next-env.d.ts", "**/*.css", ".next"]
}
